	'}'
;

ManifestFile:
	'manifest' '{'
		(sdk=ManifestSDK & usesPermission=ManifestUsesPermission?)
	'}'
;

ManifestSDK:
	'sdk' '{'
		(
		 ('from' minSdkVersion=INT 'to' maxSdkVersion=INT) &
		 ('target' targetSdkVersion=INT)
		)
	'}'
;

ManifestUsesPermission:
	'usesPermission' '{'
		//permissions+=ID (',' permissions+=ID)*
